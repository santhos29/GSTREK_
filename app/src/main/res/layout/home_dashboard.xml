<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayout"
        android:layout_marginTop="20dp">

        <!-- App Name -->
        <TextView
            android:id="@+id/GSTrekname"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="GSTrek"
            android:textColor="#34a0a4"
            android:textSize="40sp"
            app:layout_constraintEnd_toStartOf="@+id/gstImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- App Description -->
        <TextView
            android:id="@+id/gstrekDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="One Step GST Solutions"
            android:textSize="18sp"
            android:layout_marginStart="18dp"
            android:textColor="#34a0a4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/GSTrekname"
            app:layout_constraintEnd_toStartOf="@+id/gstImage" />

        <!-- App Image -->
        <ImageView
            android:id="@+id/gstImage"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:src="@drawable/gst"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/GSTrekname" />

        <!-- First Row of Cards -->
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gstImage">

            <!-- First Card in Row 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/calculatorCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/cardImage1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/calculator_icon"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/cardText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardImage1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="GST Calculator"
                        android:textColor="#111d13" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Second Card in Row 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/cardImage2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/calculator_icon"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/cardText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardImage2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="File Returns"
                        android:textColor="#111d13" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Second Row of Cards -->
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row1">

            <!-- Third Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/cardImage3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/calculator_icon"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/cardText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardImage3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Dashboard"
                        android:textColor="#111d13" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Fourth Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logoutCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/cardImage4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logout_icon"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/cardText4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardImage4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Logout"
                        android:textColor="#111d13" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Add additional rows (row3, row4, row5) similarly for cards 5 to 10 -->


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>